<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="term" type="com.alecgardner.wgu_progress_tracker.Term"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:background="@color/termBackground">

        <TextView
            android:id="@+id/termNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="text"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/termStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="@{term.convertStartToString()}"/>

        <TextView
            android:id="@+id/termEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="@{term.convertEndToString()}"/>

        <Button
            android:id="@+id/termOpenButton"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/maximize"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:textSize="24sp"
            android:layout_marginStart="16dp" />

    </LinearLayout>


</layout>